---
import '@styles/admin.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

function isActive(path: string): string {
  if (path === '/admin' && currentPath === '/admin') return 'active';
  if (path !== '/admin' && currentPath.startsWith(path)) return 'active';
  return '';
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap" />
    <title>{title} | JaJa Admin</title>
  </head>
  <body>
    <div class="admin-layout">
      <aside class="admin-sidebar">
        <div class="admin-sidebar-brand">
          <h2>JaJa Admin</h2>
          <small>Content Portal</small>
        </div>
        <ul class="admin-nav">
          <li><a href="/admin" class={isActive('/admin')}>Dashboard</a></li>
          <li><a href="/admin/tours" class={isActive('/admin/tours')}>Tours</a></li>
          <li><a href="/admin/blog" class={isActive('/admin/blog')}>Blog</a></li>
          <li><a href="/admin/gallery" class={isActive('/admin/gallery')}>Gallery</a></li>
          <li><a href="/admin/testimonials" class={isActive('/admin/testimonials')}>Testimonials</a></li>
          <li><a href="/admin/submissions" class={isActive('/admin/submissions')}>Submissions</a></li>
        </ul>
        <div class="admin-sidebar-footer">
          <a href="/">View Site</a> &middot;
          <a href="/admin/logout">Logout</a>
        </div>
      </aside>
      <main class="admin-main">
        <slot />
      </main>
    </div>
  </body>
</html>
