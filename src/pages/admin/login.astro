---
import bcrypt from 'bcryptjs';
import { createSession } from '@db/queries/sessions.js';

const { compareSync } = bcrypt;

let error = '';

if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const password = form.get('password') as string;
  const hash = process.env.ADMIN_PASSWORD_HASH || '';

  if (password && hash && compareSync(password, hash)) {
    const sessionId = createSession();
    Astro.cookies.set('session', sessionId, {
      httpOnly: true,
      secure: import.meta.env.PROD,
      sameSite: 'lax',
      path: '/',
      maxAge: 60 * 60 * 24 * 7, // 7 days
    });
    return Astro.redirect('/admin');
  } else {
    error = 'Invalid password.';
  }
}

// If already logged in, redirect to dashboard
const sessionId = Astro.cookies.get('session')?.value;
if (sessionId) {
  const { validateSession } = await import('@db/queries/sessions.js');
  if (validateSession(sessionId)) {
    return Astro.redirect('/admin');
  }
}
