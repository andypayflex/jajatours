---
import AdminLayout from '@layouts/AdminLayout.astro';
import { getAllTestimonials } from '@db/queries/testimonials.js';

const testimonials = getAllTestimonials();
---

<AdminLayout title="Testimonials">
  <div class="admin-header">
    <h1>Testimonials</h1>
    <a href="/admin/testimonials/new" class="btn btn-primary">New Testimonial</a>
  </div>

  {testimonials.length > 0 ? (
    <table class="admin-table">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Rating</th>
          <th>Tour</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {testimonials.map(t => (
          <tr>
            <td><a href={`/admin/testimonials/${t.id}`}>{t.customerName}</a></td>
            <td>{'★'.repeat(t.rating)}{'☆'.repeat(5 - t.rating)}</td>
            <td>{t.tourTitle || '—'}</td>
            <td>
              <a href={`/admin/testimonials/${t.id}`} class="btn btn-secondary btn-sm">Edit</a>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  ) : (
    <div class="admin-card">
      <p>No testimonials yet. <a href="/admin/testimonials/new">Add one.</a></p>
    </div>
  )}
</AdminLayout>
