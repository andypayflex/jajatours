---
interface Pricing {
  amount: number;
  currency: string;
  perPerson: boolean;
}

interface Props {
  pricing?: Pricing;
  inclusions?: string[];
  exclusions?: string[];
}

const { pricing, inclusions, exclusions } = Astro.props;

// Guard: if no pricing data, render nothing
if (!pricing) {
  return null;
}

// Format price based on currency
function formatPrice(amount: number, currency: string): string {
  if (currency === 'ZAR') {
    return `R${amount.toLocaleString('en-ZA')}`;
  }
  return `${currency} ${amount.toLocaleString()}`;
}
---

<section class="tour-section">
  <h2>Pricing</h2>

  <div class="price-display">
    {formatPrice(pricing.amount, pricing.currency)}
  </div>
  {pricing.perPerson && (
    <div class="price-unit">per person</div>
  )}

  <div class="pricing-details">
    {inclusions && inclusions.length > 0 && (
      <div class="inclusions">
        <h3>What's Included</h3>
        <ul>
          {inclusions.map((item) => (
            <li class="included-item">{item}</li>
          ))}
        </ul>
      </div>
    )}

    {exclusions && exclusions.length > 0 && (
      <div class="exclusions">
        <h3>What's Not Included</h3>
        <ul>
          {exclusions.map((item) => (
            <li class="excluded-item">{item}</li>
          ))}
        </ul>
      </div>
    )}
  </div>
</section>

<style>
  .tour-section {
    margin-bottom: 3rem;
  }

  .tour-section h2 {
    margin-bottom: 1rem;
  }

  .price-display {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .price-unit {
    font-size: 1rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .pricing-details {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .pricing-details {
      flex-direction: row;
      gap: 3rem;
    }

    .inclusions,
    .exclusions {
      flex: 1;
    }
  }

  .inclusions h3,
  .exclusions h3 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .inclusions ul,
  .exclusions ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .included-item,
  .excluded-item {
    padding-left: 1.75rem;
    position: relative;
    margin-bottom: 0.5rem;
    min-height: 1.5rem;
  }

  .included-item::before {
    content: '\2713';
    position: absolute;
    left: 0;
    color: #166534;
    font-weight: bold;
    font-size: 1.125rem;
  }

  .excluded-item::before {
    content: '\2717';
    position: absolute;
    left: 0;
    color: #991b1b;
    font-weight: bold;
    font-size: 1.125rem;
  }
</style>
