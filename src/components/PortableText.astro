---
import { PortableText as AstroPortableText } from 'astro-portabletext';
import PortableTextImage from './PortableTextImage.astro';

interface Props {
  value: any;
}

const { value } = Astro.props;

const components = {
  type: {
    image: PortableTextImage,
  },
};
---

<AstroPortableText value={value} components={components} />

<style>
  :global(.portable-text) {
    line-height: 1.6;
  }

  :global(.portable-text h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: bold;
  }

  :global(.portable-text h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
    font-weight: bold;
  }

  :global(.portable-text p) {
    margin-bottom: 1rem;
  }

  :global(.portable-text strong) {
    font-weight: bold;
  }

  :global(.portable-text em) {
    font-style: italic;
  }

  :global(.portable-text a) {
    color: #2d5016;
    text-decoration: underline;
  }

  :global(.portable-text a:hover) {
    color: #d4a843;
  }

  :global(.portable-text ul) {
    margin: 1rem 0;
    padding-left: 2rem;
    list-style-type: disc;
  }

  :global(.portable-text ol) {
    margin: 1rem 0;
    padding-left: 2rem;
    list-style-type: decimal;
  }

  :global(.portable-text li) {
    margin-bottom: 0.5rem;
  }
</style>
