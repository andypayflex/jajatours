---
// Site footer with contact info and copyright
const currentYear = new Date().getFullYear();
---
<footer class="footer">
  <div class="footer-container">
    <div class="footer-section">
      <h3>JaJa Tours</h3>
      <p>South African Adventure Awaits</p>
    </div>

    <div class="footer-section">
      <h4>Quick Links</h4>
      <ul class="footer-links">
        <li><a href="/tours">Tours</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>Contact</h4>
      <ul class="footer-contact">
        <li>Email: <a href="mailto:info@jajatours.co.za">info@jajatours.co.za</a></li>
        <li>WhatsApp: <a href="https://wa.me/27123456789">+27 12 345 6789</a></li>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {currentYear} JaJa Tours. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-bg-dark);
    color: var(--color-bg);
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .footer-section h3 {
    color: var(--color-accent);
    margin-bottom: 0.5rem;
    font-size: 1.5rem;
  }

  .footer-section h4 {
    color: var(--color-accent);
    margin-bottom: 0.75rem;
    font-size: 1.125rem;
  }

  .footer-section p {
    margin-bottom: 0.5rem;
    color: var(--color-bg);
  }

  .footer-links,
  .footer-contact {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li,
  .footer-contact li {
    margin-bottom: 0.5rem;
  }

  .footer a {
    color: var(--color-bg);
    text-decoration: none;
    transition: color 0.2s ease;
    padding: 0;
    min-height: auto;
  }

  .footer a:hover {
    color: var(--color-accent);
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 2rem auto 0;
    padding: 2rem 1rem 0;
    text-align: center;
    border-top: 1px solid rgba(250, 250, 247, 0.2);
  }

  .footer-bottom p {
    color: var(--color-bg);
    font-size: 0.875rem;
    margin: 0;
  }

  /* Desktop layout - 3 columns */
  @media (min-width: 768px) {
    .footer-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
