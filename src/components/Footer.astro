---
// Site footer with contact info and copyright
const currentYear = new Date().getFullYear();
---
<footer class="footer">
  <div class="footer-container">
    <div class="footer-section">
      <h3>JaJa Tours</h3>
      <p>Adventure architecture for people who travel to feel alive.</p>
    </div>

    <div class="footer-section">
      <h4>Explore</h4>
      <ul class="footer-links">
        <li><a href="/tours">Tours</a></li>
        <li><a href="/about">Our Story</a></li>
        <li><a href="/contact">Start Planning</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>Reach Out</h4>
      <ul class="footer-contact">
        <li>Email: <a href="mailto:info@jajatours.co.za">info@jajatours.co.za</a></li>
        <li>WhatsApp: <a href="https://wa.me/27123456789">+27 12 345 6789</a></li>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {currentYear} JaJa Tours. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    margin-top: 5rem;
    padding: 4rem 0 1.2rem;
    color: var(--color-white);
    background:
      radial-gradient(circle at 12% -16%, rgba(240, 183, 99, 0.35), transparent 36%),
      linear-gradient(145deg, #132b3a 0%, #183745 42%, #215364 100%);
  }

  .footer-container {
    width: min(1140px, calc(100% - 2.5rem));
    margin: 0 auto 1rem;
    padding: 1.2rem;
    border-radius: 28px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    background: rgba(255, 255, 255, 0.07);
    backdrop-filter: blur(6px);
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .footer-section h3 {
    color: var(--color-sun);
    margin-bottom: 0.5rem;
    font-size: 1.7rem;
  }

  .footer-section h4 {
    color: rgba(255, 255, 255, 0.82);
    margin-bottom: 0.6rem;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .footer-section p {
    margin-bottom: 0;
    color: rgba(255, 255, 255, 0.82);
    max-width: 34ch;
  }

  .footer-links,
  .footer-contact {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li,
  .footer-contact li {
    margin-bottom: 0.45rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .footer a {
    color: rgba(255, 255, 255, 0.88);
    text-decoration: none;
    transition: color 0.2s ease, opacity 0.2s ease;
    padding: 0;
    min-height: auto;
  }

  .footer a:hover {
    color: var(--color-sun);
  }

  .footer-bottom {
    width: min(1140px, calc(100% - 2.5rem));
    margin: 0 auto;
    padding: 1.6rem 0 0;
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.24);
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.74);
    font-size: 0.84rem;
    margin: 0;
    letter-spacing: 0.04em;
  }

  @media (min-width: 820px) {
    .footer-container {
      grid-template-columns: repeat(3, 1fr);
      padding: 1.6rem 1.9rem;
      gap: 2rem;
    }
  }
</style>
